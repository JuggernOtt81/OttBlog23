@model OttBlog23.Models.Blog
@using OttBlog23.Models
@using OttBlog23.Services.Interfaces;
@inject IImageService imageService

@{
    ViewData["Title"] = @Html.Raw(Model.Name);
}

<h1>@ViewData["Title"]</h1>
<article class="mb-4">
    <div class="container">
        <div class="row">
            <img style="max-height:800px; max-width:800px;" src="@imageService.DecodeImage(Model.ImageData, Model.ContentType)" />
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    @Html.Raw(Model.Description)
                </div>
            </div>

        </div>
    </div>
</article>
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Created)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Created)
    </dd>
</dl>
<hr />
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
