<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lawson's Blog</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/summernote-lite.css" rel="stylesheet" />
    <link href="~/css/summernote-lite.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <link href="~/css/custom.css" rel="stylesheet" />
</head>
<body style="background-color:navajowhite">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <div style="color:black; padding-left:15px; padding-right:15px;" class="text-center">
                <a class="navbar-brand" style="font-family:'OCR A'; font-weight:400; font-size:small;" asp-area="" asp-controller="Home" asp-action="Index">Lawson's<br />Blog</a>
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="font-family:'OCR A'; font-size:x-large; color:darkseagreen">
                <ul class="navbar-nav flex-grow-1 row">
                    @if (User.IsInRole("Administrator"))
                    {
                        <li class="nav-item col" style=" padding-left:15px; padding-right:15px;">
                            <a class="nav-link text-dark text-center" asp-area="" asp-controller="Blogs" asp-action="Index">List-Blogs</a>
                        </li>
                        <li class="nav-item col" style=" padding-left:15px; padding-right:15px;">
                            <a class="nav-link text-dark text-center" asp-area="" asp-controller="Blogs" asp-action="Create">New-Blog</a>
                        </li>
                        <li class="nav-item col" style=" padding-left:15px; padding-right:15px;">
                            <a class="nav-link text-dark text-center" asp-area="" asp-controller="Posts" asp-action="Create">New-Post</a>
                        </li>
                        <li class="nav-item col" style=" padding-left:15px; padding-right:15px;">
                            <a class="nav-link text-dark text-center" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item col" style=" padding-left:15px; padding-right:15px;">
                            <a class="nav-link text-dark text-center" asp-area="" asp-controller="Blogs" asp-action="Index">Blogs-Index</a>
                        </li>
                        <li class="nav-item col" style=" padding-left:15px; padding-right:15px;">
                            <a class="nav-link text-dark text-center" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    }
                </ul>
                <div class="col" style=" padding-left:15px; padding-right:15px;">
                    <form asp-action="SearchIndex" asp-controller="Posts">
                        <div class="input-group mt-1">
                            <input type="text" class="form-control" placeholder="Search Term" name="searchTerm" />
                            <div class="input-group-append">
                                <button class="btn btn-outline-primary note-btn-block" type="submit">Search</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div style=" padding-left:15px; padding-right:15px;">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </nav>
    <header class="masthead" style="background-image: url(@ViewData["HeaderImage"])">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>@ViewData["MainText"]</h1>
                        <span class="subheading">@ViewData["SubText"]</span>


                    </div>
                </div>
            </div>
        </div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @Html.EJS().ScriptManager()
            @RenderBody()
        </main>
    </div>

