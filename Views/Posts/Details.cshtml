@model OttBlog23.Models.Post
@using OttBlog23.Models
@using OttBlog23.Services.Interfaces;
@inject IImageService imageService

@{
    ViewData["Title"] = @Html.Raw(Model.Title);
}

<h1>@ViewData["Title"]</h1>
<article>
    <p>@Html.Raw(Model.Abstract)</p>
    <div class="row">
        <img style="max-height:800px; max-width:800px;" src="@imageService.DecodeImage(Model.ImageData, Model.ContentType)" />
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>
</article>
<dl class="row">
    <dt>
        @Html.DisplayNameFor(model => model.Created)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Created)
    </dd>
</dl>

<form asp-controller="Comments" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    @*<textarea asp-for="Body" class="form-control"></textarea>*@
    <span asp-validation-for="Content" class="text-danger"></span>
    <input type="submit" value="Create" class="btn btn-primary" />
</form>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
