@model OttBlog23.Models.Post
@using Microsoft.AspNetCore.Identity;
@using OttBlog23.Data
@using OttBlog23.Enums
@using OttBlog23.Helpers
@using OttBlog23.Models
@using OttBlog23.ViewModels
@using OttBlog23.Services
@using OttBlog23.Services.Interfaces
@using Microsoft.AspNetCore.Html
@inject IImageService imageService
@inject UserManager<BlogUser> userManager

@{
    ViewData["Title"] = @Html.Raw(Model.Title);
}

<h1>@ViewData["Title"]</h1>
<article>
    <p>@Html.Raw(Model.Abstract)</p>
    <div class="row">
        <img style="max-height:800px; max-width:800px;" src="@imageService.DecodeImage(Model.ImageData, Model.ContentType)" />
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>
    <div class="row">
        <p class="font-monospace" style="font-variant:inherit"><b>@Html.DisplayNameFor(model => model.Created)</b> <i>@Html.DisplayFor(model => model.Created)</i></p>
    </div>
    <hr />
    <div class="row">
        <div class="col text-center font-weight-bold h3">
            Custom Post Tags
        </div>
    </div>
    <div class="row">
        <div class="col">
            @foreach (var tag in Model.Tags)
            {
                <a class="btn-warning btn-sm btn-outline-warning" asp-action="TagIndex" asp-route-tag="@tag.Text.ToLower()">#@tag.Text</a>
            }
        </div>
    </div>
    <hr />
    <div>
        @if (User.Identity.IsAuthenticated)
        {
            <form asp-controller="Comments" asp-action="Create">
                @Html.Hidden("PostId", Model.Id)
                <div class="form-group">
                    <label class="h2 custom-control-label font-weight-bold">Add Comment</label>
                    <textarea name="body" class="form-control" rows="5"></textarea>
                </div>
                <input type="submit" value="Create" class="btn note-btn-block btn-sm btn-dark" />
            </form>
        }
        else
        {
            <a class="btn note-btn-block btn-sm btn-dark" asp-area="Identity" asp-page="/Account/Login">
                Log in to comment
            </a>
        }
        <hr />
        <button id="commentSection" class="btn btn-sm btn-dark note-btn-block">@Model.Comments.Count COMMENT(S)</button>
        @{
            var counter = 0;
        }
        @foreach (var comment in Model.Comments)
        {
            <div class="media media-border p-2 m-2 bg-light row">
                <div class="media-body col-1">
                    <img class="mr-3 mt-3 rounded-circle" style="width:60px;" src="@imageService.DecodeImage(comment.BlogUser.ImageData, comment.BlogUser.ContentType)">
                </div>
                <div class="media-body col">
                    <h4>@comment.BlogUser.FullName</h4>
                    @if (comment.Moderated is not null)
                    {
                        <small><i>MODERATED by @comment.Moderator on @comment.Moderated?.ToString("MMM dd, yyyy") for @comment.ModerationType.ToString()</i></small>
                    }
                    else
                    {
                        <small><i>Commented on @comment.Created.Value.ToString("MMM dd, yyyy")</i></small>
                    }

                    @if (string.IsNullOrEmpty(comment.Body))
                    {
                        <span class="small font-italic">Comment not available...</span>
                    }
                    else if (comment.Moderated is not null)
                    {
                        @comment.ModeratedBody
                    }
                    else if (comment.Deleted is null)
                    {
                        @comment.Body
                    }

                    <p>@comment.Body</p>

                    @if (comment.Moderated is null && comment.Deleted is null && comment.BlogUserId == userManager.GetUserId(User))
                    {
                        <hr />
                        <button data-bs-toggle="modal" data-bs-target="#editModal-@comment.Id" class="btn-sm btn-dark note-float-right font-weight-bold">EDIT</button>
                    }
                    @if (User.IsInRole(BlogRole.Moderator.ToString()) && comment.Deleted is null)
                    {
                        <hr />
                        <div class="row">
                            <div class="col-2">
                                <button class="btn-sm btn-dark font-weight-bold note-btn-block" data-bs-toggle="modal" data-bs-target="@($"#moderateModal{counter}")">MODERATE THIS</button>
                            </div>
                            <div class=" col-2">
                                <form asp-action="Delete" app-asp-controller="Comments">
                                    @Html.Hidden("Id", comment.Id)
                                    @Html.Hidden("Slug", comment.Post.Slug)
                                    <button class="btn-sm btn-dark note-float-right font-weight-bold">DELETE</button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
            @*Modals*@
            <div class="modal" id="editModal-@(comment.Id)">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Editing Comment...</h4>
                        </div>
                        <div class="modal-body">
                            <form asp-action="Edit" asp-controller="Comments">
                                @Html.Hidden("Id", comment.Id)
                                <div class="form-group">
                                    <textarea name="Body" class="form-control" required>@comment.Body</textarea>
                                </div>
                                <button class="btn-sm btn-dark border-success font-weight-bold" type="submit">SUBMIT</button>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class=" btn-sm btn-dark font-weight-bold" data-bs-dismiss="modal">CLOSE</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal" id="@($"moderateModal{counter}")">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title">Moderating Comment...</h4>
                        </div>
                        <div class="modal-body">
                            <form asp-action="Moderate" asp-controller="Comments">
                                @Html.Hidden("Id", comment.Id)
                                @Html.Hidden("Body", comment.Body)

                                <div class="form-group">
                                    <label class="control-label">Original Comment</label>
                                    <textarea disabled class="form-control" style="resize:none">@comment.Body</textarea>
                                </div>

                                <div class="form-group">
                                    <label class="control-label">Moderated Comment</label>
                                    <textarea required name="ModeratedBody" class="form-control">@comment.ModeratedBody</textarea>
                                </div>

                                <div class="form-group">
                                    <label class="control-label">Reason For Moderation</label>
                                    <select class="form-control" asp-for="@comment.ModerationType" name="ModerationType" asp-items="Html.GetEnumSelectList<ModerationType>()"></select>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col">
                                            <button class="btn-sm btn-dark border-success font-weight-bold" type="submit">SUBMIT</button>
                                        </div>
                                        <div class="col">
                                            <button type="button" class=" btn-sm btn-dark font-weight-bold" data-bs-dismiss="modal">CLOSE</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            counter++;
        }
    </div>
</article>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>





@section Scripts{

    <script>
        $('#editModal').appendTo("body")
    </script>

}